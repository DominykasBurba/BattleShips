@using BattleShips.Services
@using BattleShips.Domain.Commands
@using Microsoft.AspNetCore.SignalR.Client
@inject ChatService Chat
@implements IDisposable

<div class="card">
    <div class="card-header">Chat</div>
    <div class="card-body" style="max-height:200px;overflow:auto">
        @foreach (var m in Chat.Messages)
        {
            <div><strong>@m.Sender:</strong> @m.Text
                <small class="text-muted">(@m.Timestamp.ToShortTimeString())</small>
            </div>
        }
    </div>
    <div class="card-footer d-flex gap-2">
        <input class="form-control" @bind="text" @bind:event="oninput" placeholder="Type message..." />
        <button class="btn btn-primary" @onclick="Send">Send</button>
    </div>
</div>

@code {
    [Parameter] public HubConnection? HubConnection { get; set; }
    [Parameter] public string? GameId { get; set; }
    [Parameter] public string PlayerName { get; set; } = "Player 1";

    private string text = string.Empty;
    private readonly ChatInvoker _invoker = new();
    private string? _myConnectionId;

    protected override void OnInitialized()
    {
        // Subscribe to chat updates
        Chat.Updated += OnChatUpdated;
    }

    private void OnChatUpdated()
    {
        // Use InvokeAsync to ensure StateHasChanged is called on the UI thread
        _ = InvokeAsync(StateHasChanged);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && HubConnection != null)
        {
            // Store our connection ID immediately when available
            if (string.IsNullOrEmpty(_myConnectionId))
            {
                _myConnectionId = HubConnection.ConnectionId;
            }
            
            // Register SignalR handler for receiving messages (only if online mode)
            HubConnection.On<string, string>("ReceiveMessage", OnMessageReceived);
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        Chat.Updated -= OnChatUpdated;
        if (HubConnection != null && HubConnection.State != HubConnectionState.Disconnected)
        {
            try
            {
                HubConnection.Remove("ReceiveMessage");
            }
            catch (ObjectDisposedException)
            {
                // HubConnection already disposed, ignore
            }
        }
    }

    /// <summary>
    /// Handles incoming messages from SignalR and adds them using Command Pattern.
    /// This preserves the Command Pattern even for received messages.
    /// </summary>
    private void OnMessageReceived(string senderId, string message)
    {
        // Use InvokeAsync to ensure we're on the UI thread
        _ = InvokeAsync(() =>
        {
            // Ensure we have our connection ID
            if (string.IsNullOrEmpty(_myConnectionId) && HubConnection != null)
            {
                _myConnectionId = HubConnection.ConnectionId;
            }
            
            // Skip if this is our own message (we already added it locally via Command Pattern)
            if (!string.IsNullOrEmpty(_myConnectionId) && senderId == _myConnectionId)
            {
                return;
            }

            // Determine sender name based on our PlayerName
            // If we're Player 1, sender must be Player 2, and vice versa
            var senderName = PlayerName == "Player 1" ? "Player 2" : "Player 1";

            // Use Command Pattern to add received message
            var command = new SendMessageCommand(Chat, senderName, message);
            _invoker.RunCommand(command);
        });
    }

    /// <summary>
    /// Client method: Creates a command and passes it to the invoker.
    /// This demonstrates the Command Pattern where Client -> Invoker -> Command -> Receiver.
    /// After local execution, sends via SignalR if in online mode.
    /// </summary>
    private async Task Send()
    {
        if (string.IsNullOrWhiteSpace(text)) return;
        
        var messageText = text.Trim();
        
        // Ensure we have our connection ID before sending
        if (string.IsNullOrEmpty(_myConnectionId) && HubConnection != null)
        {
            _myConnectionId = HubConnection.ConnectionId;
        }
        
        // Client creates the command
        var command = new SendMessageCommand(Chat, PlayerName, messageText);
        
        // Client passes command to invoker (executes locally via Command Pattern)
        _invoker.RunCommand(command);
        
        // If in online mode, also send via SignalR
        if (HubConnection != null && !string.IsNullOrEmpty(GameId))
        {
            try
            {
                await HubConnection.InvokeAsync("SendMessage", GameId, messageText);
            }
            catch (Exception ex)
            {
                // If SignalR send fails, we could undo the command, but for simplicity we'll just log
                // The message is already added locally via Command Pattern
                Console.WriteLine($"Failed to send message via SignalR: {ex.Message}");
            }
        }
        
        text = string.Empty;
    }
}